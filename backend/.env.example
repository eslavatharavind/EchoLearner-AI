# ============ API Keys ============
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ============ LLM Configuration ============
LLM_PROVIDER=openai  # Options: openai, groq, llama, mistral
OPENAI_MODEL=gpt-4
GROQ_MODEL=llama-3.1-70b-versatile
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# ============ Embedding Configuration ============
EMBEDDING_PROVIDER=sentence-transformers  # Options: openai, sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============ TTS Configuration ============
TTS_PROVIDER=openai  # Options: openai, coqui, gtts
OPENAI_TTS_MODEL=tts-1
TTS_VOICE=alloy  # Options: alloy, echo, fable, onyx, nova, shimmer
TTS_SPEED=1.0

# ============ STT Configuration ============
STT_PROVIDER=faster-whisper  # Options: faster-whisper, openai-whisper
STT_MODEL=base  # Options: tiny, base, small, medium, large
STT_LANGUAGE=en
STT_PAUSE_THRESHOLD=6.0
STT_ENERGY_THRESHOLD=0.5
STT_MIN_SILENCE_DURATION_MS=1000

# ============ Vector Database Configuration ============
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma
VECTOR_DB_PATH=./data/vector_db
RETRIEVAL_TOP_K=5
RETRIEVAL_SCORE_THRESHOLD=0.5

# ============ Document Processing Configuration ============
CHUNK_SIZE=500
CHUNK_OVERLAP=100
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=50

# ============ Storage Paths ============
DATA_DIR=./data
AUDIO_OUTPUT_DIR=./data/audio_output
LOGS_DIR=./logs

# ============ Server Configuration ============
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# ============ Memory Configuration ============
MEMORY_MAX_TOKENS=1000
